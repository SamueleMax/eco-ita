---
const { text, src, alt } = Astro.props;

import { Image } from 'astro:assets';
---

<div>
    <p>{text}</p>    
    <Image src={src} alt={alt} />
</div>

<style>
    div {
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    img {
        width: 300px;
        height: auto;
    }

    @media (max-width: 800px) {
        div {
            flex-direction: column;
            gap: 0;
        }
	}
</style>
